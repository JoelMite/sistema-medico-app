<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_welcome"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"/>
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:rowCount="3"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black">

                    <ImageView
                        android:src="@drawable/ic_add_circle"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>


                    <Button
                        android:id="@+id/btnCreateAppointment"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent"
                        android:text="@string/btn_create_appointment"
                        android:textColor="@color/white_transparent"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black">

                    <ImageView
                        android:src="@drawable/ic_schedule"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <Button
                        android:id="@+id/btnMyAppointments"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent"
                        android:text="@string/btn_my_appointments"
                        android:textColor="@color/white_transparent"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black">

                    <ImageView
                        android:src="@drawable/ic_access_alarm"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <Button
                        android:id="@+id/btnReminderMedicine"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent"
                        android:text="@string/btn_reminder_medicine"
                        android:textColor="@color/white_transparent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black">

                    <ImageView
                        android:src="@drawable/ic_power_off"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="match_parent"
                        android:text="@string/btn_log_out"
                        android:textColor="@color/white_transparent"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</ScrollView>